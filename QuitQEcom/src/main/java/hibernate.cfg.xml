<!DOCTYPE hibernate-configuration PUBLIC

		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"

		"https://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
 
<hibernate-configuration>
 
	<session-factory>

		<!-- Database connection properties - Driver, URL, user, password -->
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/QuitQEcommerce</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		
		<property name="hbm2ddl.auto">update</property>
		<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="show_sql">true</property>
		
		<!-- Mapping model/entity class having annotations   -->
		<mapping class="com.hexaware.quitqecom.component.Cart" />
		<mapping class="com.hexaware.quitqecom.component.CartItems" />
		<mapping class="com.hexaware.quitqecom.component.Category" />
		<mapping class="com.hexaware.quitqecom.component.Orders" />
		<mapping class="com.hexaware.quitqecom.component.OrderItems" />
		<mapping class="com.hexaware.quitqecom.component.Payment" />
		<mapping class="com.hexaware.quitqecom.component.Product" />
		<mapping class="com.hexaware.quitqecom.component.User" />		


	</session-factory>
 
 
</hibernate-configuration>								
 